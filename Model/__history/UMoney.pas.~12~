unit UMoney;

interface
type
  TMoney = class;

  IMoney = interface
    procedure add(value: TMoney);
    function times(quantity: integer): TMoney;
    function minus(value: TMoney): TMoney;
  end;

  TMoney = class(TInterfacedObject, IMoney)
    constructor Create(value: integer);
    procedure add(value: TMoney);
    function times(quantity: integer): TMoney;
    function minus(value: TMoney): TMoney;
  end;

