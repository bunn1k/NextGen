unit UPayment;

interface

uses UMoney;

type
  TPayment = class
  private
    amount: TMoney;
  public
    constructor Create(cashTendered: TMoney);
    function getAmount(): TMoney;
  end;

implementation

{ Payment }

function Payment.getAmount: TMoney;
begin
  result := amount;
end;

constructor Payment.Create(cashTendered: TMoney);
begin
  amount := cashTendered;
end;

end.
