unit Unit1;

interface

uses
   UItemID, UMoney, Vcl.StdCtrls, System.Classes, Vcl.Controls;

type
  IProductDescription = interface
    function getId: TItemId;
    function getPrice: IMoney;
    function getDescription: string;
  end;

  TProductDescription = class(TInterfacedObject, IProductDescription)
  private
    id: TItemId;
    price: IMoney;
    description: string;
  public
    function getId: TItemId;
    function getPrice: IMoney;
    function getDescription: string;
    constructor Create(id: TItemId; price: IMoney; description: string);
  end;

implementation

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
begin
  Form2.Show;
end;

procedure TForm1.FormCreate(Sender: TObject);
begin
  fasad:=TFasad.Create();
end;

end.
